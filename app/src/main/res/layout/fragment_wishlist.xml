<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/tv_wishlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:elevation="6dp"
        android:text="Wishlist will show up here"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/fWishdeleteList"
        app:layout_constraintTop_toBottomOf="@+id/fWishList"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/fWishList"
        android:layout_width="202dp"
        android:layout_height="51dp"
        android:background="@color/colorPrimaryLight"
        android:elevation="4dp"
        android:text="get wishlist"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fWishlistSee"
        android:layout_width="197dp"
        android:layout_height="53dp"
        android:background="@color/colorPrimaryLight"
        android:elevation="4dp"
        android:layout_margin="5dp"
        android:text="see wishlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fWishList"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fWishdeleteList"
        android:layout_width="194dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:elevation="4dp"
        android:background="@color/colorPrimaryLight"
        android:text="delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fWishWeb"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:elevation="4dp"
        android:background="@color/colorPrimaryLight"
        android:text="search online"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/fWishdeleteList"
        app:layout_constraintTop_toBottomOf="@+id/tv_wishlist"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>